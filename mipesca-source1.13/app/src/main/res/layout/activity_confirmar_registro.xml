<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ConfirmarRegistroActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/lblPescadorConfirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:text="@string/lblPescadorConfirmar"
        android:textAlignment="center"
        style="@style/texto" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/txtConfirmarRegistroCve1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="14dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:textAlignment="center"
            style="@style/texto"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/txtConfirmarRegistroCve2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="14dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:textAlignment="center"
            style="@style/texto"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/txtConfirmarRegistroCve3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="14dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:textAlignment="center"
            style="@style/texto"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/txtConfirmarRegistroCve4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="14dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:maxLength="1"
            android:text=""
            android:textAlignment="center"
            style="@style/texto"
            tools:ignore="Autofill" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnPescadorConfirmarCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:layout_weight="1"
            android:text="@string/btnPescadorConfirmarCancelar"
            style="@style/boton" />
        <Button
            android:id="@+id/btnPescadorConfirmarAceptar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:layout_weight="1"
            android:text="@string/btnPescadorConfirmarAceptar"
            style="@style/boton" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtCC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="TextView"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/txtId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone"/>

</LinearLayout>