<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblViajeRecurso"
                style="@style/midetiqueta"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/lblListadoViajeRecurso"/>
            <TextView
                android:id="@+id/lblViajeRecursoPresentacion"
                style="@style/midetiqueta"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/lblListadoViajePresentacion"/>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtViajeRecurso"
                style="@style/midtexto"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textStyle="italic"
                android:text="ALMEJA CHIONA"
                />
            <TextView
                android:id="@+id/txtViajePresentacion"
                style="@style/midtexto"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textStyle="italic"
                android:text="DESVICERADO"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#ffffff"/>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblViajeCaptura"
                style="@style/midetiqueta"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:text="@string/lblListadoViajeCaptura"/>
            <TextView
                android:id="@+id/lblViajePrecio"
                style="@style/midetiqueta"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:text="@string/lblListadoViajePrecio"/>
            <TextView
                android:id="@+id/lblViajeNoPiezas"
                style="@style/midetiqueta"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:text="@string/lblListadoViajeNoPiezas"
                android:visibility="invisible"/>


        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtViajeCaptura"
                style="@style/midtexto"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:text="250 kgs"
                />

            <TextView
                android:id="@+id/txtViajePrecio"
                style="@style/midtexto"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:text="250"
                />
            <TextView
                android:id="@+id/txtViajeNoPiezas"
                style="@style/midtexto"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:text="2000"
                android:visibility="invisible"
                />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>