<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".fragmentos.ViajeFragment"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/lblViajeFhRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/texto"
            android:layout_margin="14dp"
            android:layout_weight="1"
            tools:ignore="Autofill"
            android:text="@string/lblViajeFechaRegistro"
            />

        <TextView
            android:id="@+id/txtViajeFhRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/texto"
            android:layout_margin="14dp"
            android:layout_weight="1"
            tools:ignore="Autofill"
            />

    </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/ilViajeMunicipio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:layout_alignParentTop="true"
                >
                <AutoCompleteTextView
                    android:id="@+id/txtViajeMunicipio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/texto"
                    android:inputType="textCapCharacters"
                    android:hint="@string/lblViajeMunicipio" />
            </android.support.design.widget.TextInputLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iconViajeMunicipio"
                android:src="@drawable/baseline_arrow_drop_down_black_24"
                android:layout_marginRight="14dp"
                android:layout_alignTop="@+id/ilViajeMunicipio"
                android:layout_alignBottom="@+id/ilViajeMunicipio"
                android:layout_alignRight="@+id/ilViajeMunicipio"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iconCambioMunicipio"
                android:src="@drawable/baseline_swap_horiz_black_24"
                android:layout_marginRight="14dp"
                android:layout_alignTop="@+id/ilViajeMunicipio"
                android:layout_alignBottom="@+id/ilViajeMunicipio"
                android:layout_alignRight="@+id/ilViajeMunicipio"
                android:visibility="gone"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/ilViajeComunidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:layout_alignParentTop="true"
                >
            <AutoCompleteTextView
                android:id="@+id/txtViajeComunidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/texto"
                android:inputType="textCapCharacters"
                android:hint="@string/lblViajeComunidad" />
            </android.support.design.widget.TextInputLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iconViajeComunidad"
                android:src="@drawable/baseline_arrow_drop_down_black_24"
                android:layout_marginRight="14dp"
                android:layout_alignTop="@+id/ilViajeComunidad"
                android:layout_alignBottom="@+id/ilViajeComunidad"
                android:layout_alignRight="@+id/ilViajeComunidad"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iconCambioComunidad"
                android:src="@drawable/baseline_swap_horiz_black_24"
                android:layout_marginRight="14dp"
                android:layout_alignTop="@+id/ilViajeComunidad"
                android:layout_alignBottom="@+id/ilViajeComunidad"
                android:layout_alignRight="@+id/ilViajeComunidad"
                android:visibility="gone"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/ilViajeRecurso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:layout_alignParentTop="true"
                >
            <AutoCompleteTextView
                android:id="@+id/txtViajeRecurso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/texto"
                android:inputType="textCapCharacters"
                android:hint="@string/lblViajeRecurso" />
            </android.support.design.widget.TextInputLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iconViajeRecurso"
                android:src="@drawable/baseline_arrow_drop_down_black_24"
                android:layout_marginRight="14dp"
                android:layout_alignTop="@+id/ilViajeRecurso"
                android:layout_alignBottom="@+id/ilViajeRecurso"
                android:layout_alignRight="@+id/ilViajeRecurso"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iconCambioRecurso"
                android:src="@drawable/baseline_swap_horiz_black_24"
                android:layout_marginRight="14dp"
                android:layout_alignTop="@+id/ilViajeRecurso"
                android:layout_alignBottom="@+id/ilViajeRecurso"
                android:layout_alignRight="@+id/ilViajeRecurso"
                android:visibility="gone"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/ilViajeArtePesca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:layout_alignParentTop="true"
                >
            <AutoCompleteTextView
                android:id="@+id/txtViajeArtePesca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/texto"
                android:inputType="textCapCharacters"
                android:hint="@string/lblViajeArtePesca" />
            </android.support.design.widget.TextInputLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iconViajeArtePesca"
                android:src="@drawable/baseline_arrow_drop_down_black_24"
                android:layout_marginRight="14dp"
                android:layout_alignTop="@+id/ilViajeArtePesca"
                android:layout_alignBottom="@+id/ilViajeArtePesca"
                android:layout_alignRight="@+id/ilViajeArtePesca"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iconCambioArtePesca"
                android:src="@drawable/baseline_swap_horiz_black_24"
                android:layout_marginRight="14dp"
                android:layout_alignTop="@+id/ilViajeArtePesca"
                android:layout_alignBottom="@+id/ilViajeArtePesca"
                android:layout_alignRight="@+id/ilViajeArtePesca"
                android:visibility="gone"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/ilViajeCaptura"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >
            <EditText
                android:id="@+id/txtViajeCaptura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                style="@style/texto"
                android:layout_margin="14dp"
                android:gravity="center_vertical"
                android:hint="@string/lblViajeCaptura"
                android:inputType="number"
                tools:ignore="Autofill" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/ilViajePrecio"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >
            <EditText
                android:id="@+id/txtViajePrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                style="@style/texto"
                android:layout_margin="14dp"
                android:gravity="center_vertical"
                android:hint="@string/lblViajePrecio"
                android:inputType="numberSigned"
                tools:ignore="Autofill" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <android.support.design.widget.TextInputLayout
                android:id="@+id/ilViajeCombustible"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >
                <EditText
                    android:id="@+id/txtViajeCombustible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="5"
                    style="@style/texto"
                    android:layout_margin="14dp"
                    android:hint="@string/lblViajeCombustible"
                    android:inputType="number"
                    tools:ignore="Autofill" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/ilViajeNoPiezas"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"

                android:visibility="gone">
            <EditText
                android:id="@+id/txtViajeNoPiezas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="5"
                style="@style/texto"
                android:layout_margin="14dp"
                android:hint="@string/lblViajeNoPiezas"
                android:inputType="number"
                tools:ignore="Autofill" />
        </android.support.design.widget.TextInputLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/ilViajePresentacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:layout_alignParentTop="true"
            >
        <AutoCompleteTextView
            android:id="@+id/txtViajePresentacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/texto"
            android:inputType="textCapCharacters"
            tools:ignore="Autofill"
            android:hint="@string/lblViajePresentacion" />
        </android.support.design.widget.TextInputLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iconViajePresentacion"
            android:src="@drawable/baseline_arrow_drop_down_black_24"
            android:layout_marginRight="14dp"
            android:layout_alignTop="@+id/ilViajePresentacion"
            android:layout_alignBottom="@+id/ilViajePresentacion"
            android:layout_alignRight="@+id/ilViajePresentacion"
            />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iconCambioPresentacion"
                android:src="@drawable/baseline_swap_horiz_black_24"
                android:layout_marginRight="14dp"
                android:layout_alignTop="@+id/ilViajePresentacion"
                android:layout_alignBottom="@+id/ilViajePresentacion"
                android:layout_alignRight="@+id/ilViajePresentacion"
                android:visibility="gone"
                />
        </RelativeLayout>
        <Button
            android:id="@+id/btnRegistrarViaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/boton"
            android:layout_margin="14dp"
            android:text="@string/btnViajeRegistrar" />

        <TextView
            android:id="@+id/txtViajeUsuarioId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/txtViajePescadorId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/txtViajeMunicipioId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtViajeComunidadId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtViajeRecursoId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtViajeArtePescaId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtViajePresentacionId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>