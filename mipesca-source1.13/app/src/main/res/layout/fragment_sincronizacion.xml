<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragmentos.SincronizacionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblIniciarJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="14dp"
            style="@style/texto"
            android:gravity="center_vertical"
            android:text="Sincronizar ahora" />

        <Button
            android:id="@+id/btnSincronizarAhora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="14dp"
            style="@style/boton"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:text="Ahora"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"

        android:orientation="horizontal"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:orientation="horizontal">
            <TextView
                android:id="@+id/lblSincronizacionHora"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="14dp"
                android:layout_weight="2"
                android:text="@string/lblSincronizacionHora"
                style="@style/texto"
                />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:paddingLeft="0dp"
            android:layout_weight="9"
            >

            <EditText
                android:id="@+id/txtHora"
                style="@style/texto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:inputType="date" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iconHora"
            android:src="@drawable/ic_calendar"
            android:layout_marginEnd="14dp"
            android:layout_alignTop="@+id/txtHora"
            android:layout_alignBottom="@+id/txtHora"
            android:layout_alignEnd="@+id/txtHora"
            />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblSincronizacionDias"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_margin="14dp"
            android:layout_weight="2"
            android:text="@string/lblSincronizacionDias"
            style="@style/texto"
            />
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:orientation="vertical">

            <Switch
                android:id="@+id/selectLunes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="0dp"
                android:text="@string/lblSincronizacionLunes"
                style="@style/texto"
                ></Switch>

            <Switch
                android:id="@+id/selectMartes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="0dp"
                android:text="@string/lblSincronizacionMartes"
                style="@style/texto"
                ></Switch>

            <Switch
                android:id="@+id/selectMiercoles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:paddingLeft="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/lblSincronizacionMiercoles"
                style="@style/texto"
                ></Switch>

            <Switch
                android:id="@+id/selectJueves"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:paddingLeft="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/lblSincronizacionJueves"
                style="@style/texto"
                ></Switch>

            <Switch
                android:id="@+id/selectViernes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:paddingLeft="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/lblSincronizacionViernes"
                style="@style/texto"
                ></Switch>

            <Switch
                android:id="@+id/selectSabado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:paddingLeft="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/lblSincronizacionSabado"
                style="@style/texto"
                ></Switch>

            <Switch
                android:id="@+id/selectDomingo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="rtl"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingLeft="0dp"
                android:text="@string/lblSincronizacionDomingo"
                style="@style/texto"
                ></Switch>
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/btnSincronizacionGuardar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_margin="14dp"
        style="@style/boton"
        android:text="@string/btnSincronizacionGuardar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lblCancelarJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="14dp"
            style="@style/boton"
            android:text="Cancelar"
            android:visibility="gone"/>

        <Button
    android:id="@+id/btnSincronizacionCancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="14dp"
        style="@style/boton"
        android:onClick="cancelJob"
        android:text="Cancelar Job"
        android:visibility="gone"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txtSincronizacionId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/txtSincronizacionJobEstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
</LinearLayout>
</ScrollView>