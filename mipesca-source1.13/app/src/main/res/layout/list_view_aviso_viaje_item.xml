<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblAvisoViajeRecurso"
                style="@style/midetiqueta"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/lblListadoAvisoViajeRecurso"/>
            <TextView
                android:id="@+id/lblAvisoViajePresentacion"
                style="@style/midetiqueta"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="@string/lblListadoAvisoViajePresentacion"/>
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtAvisoViajeRecurso"
                style="@style/midtexto"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textStyle="italic"
                android:text="ALMEJA CHIONA"
                />
            <TextView
                android:id="@+id/txtAvisoViajePresentacion"
                style="@style/midtexto"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textStyle="italic"
                android:text="DESVICERADO"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#ffffff"/>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lblAvisoViajeCaptura"
                style="@style/midetiqueta"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:text="@string/lblListadoAvisoViajeCaptura"/>
            <TextView
                android:id="@+id/lblAvisoViajePrecio"
                style="@style/midetiqueta"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:text="@string/lblListadoAvisoViajePrecio"/>
            <TextView
                android:id="@+id/lblAvisoViajeNoPiezas"
                style="@style/midetiqueta"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:text="@string/lblListadoAvisoViajeNoPiezas"
                android:visibility="invisible"/>


        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtAvisoViajeCaptura"
                style="@style/midtexto"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:text="250 kgs"
                />

            <TextView
                android:id="@+id/txtAvisoViajePrecio"
                style="@style/midtexto"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:text="250"
                />
            <TextView
                android:id="@+id/txtAvisoViajeNoPiezas"
                style="@style/midtexto"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textAlignment="center"
                android:textStyle="italic"
                android:text="2000"
                android:visibility="invisible"
                />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>